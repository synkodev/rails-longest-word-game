<div class="container">
  <div class="d-flex flex-column align-items-center gap-5">
    <h1 class="my-3">Longest Word Game</h1>
    <ul>
      <% @letters.each do |item| %>
        <li class="d-inline-block card border shadow rounded p-3 bg-light strong"><%= item %></li>
      <% end %>
    </ul>
    <form class="row text-center gap-3" data-turbo="false" action="score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :sampled_letters, @letters %>
      <label for="guess">Try to find the best word with the letters above:</label>
      <div class="d-flex justify-content-center gap-3">
        <input class="form-control w-50" type="text" name="word">
        <input class="btn btn-primary" type="submit" value="Give a shot!">
      </div>
    </form>
  </div>
</div>
